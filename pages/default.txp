    <style>
        :root {
            --width: 720px;
            --font-main: Verdana, sans-serif;
            --font-secondary: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,Ubuntu,"Helvetica Neue",Helvetica,Arial,"PingFangSC-Regular","Hiragino Sans GB","Lantinghei SC","Microsoft Yahei","Source Han Sans CN","WenQuanYi Micro Hei",SimSun,sans-serif;
            --font-scale: 1em;
            --background-color: #fff;
            --heading-color: #222;
            --text-color: #444;
            --link-color: #3273dc;
            --visited-color: #8b6fcb;
            --code-background-color: #eee;
            --code-color: #222;
            --blockquote-color: #222;
            --gray-color: #999;
            --color-gray-light: #ccc;
        }
        @media (prefers-color-scheme: dark) {
            :root {
                --background-color: #111;
                --heading-color: #eee;
                --text-color: #ddd;
                --link-color: #8cc2dd;
                --visited-color: #8b6fcb;
                --code-background-color: #333;
                --code-color: #ddd;
                --blockquote-color: #ccc;
                --gray-color: #999;
                --color-gray-light: #333;
            }
        }
        body {
            font-family: var(--font-secondary);
            font-size: var(--font-scale);
            margin: auto;
            padding: 1rem;
            max-width: var(--width);
            text-align: left;
            background-color: var(--background-color);
            word-wrap: break-word;
            overflow-wrap: break-word;
            line-height: 1.5;
            color: var(--text-color);
        }
        h1,
        h2,
        h3,
        h4,
        h5,
        h6 {
            font-family: var(--font-main);
            color: var(--heading-color);
        }
        a {
            color: var(--link-color);
            cursor: pointer;
            text-decoration: none;
        }
        a:hover {
            text-decoration: underline;
        }
        nav a {
            margin-right: .618rem;
        }
        strong,
        b {
            color: var(--heading-color);
        }
        button {
            margin: 0;
            cursor: pointer;
        }
        time {
            font-family: monospace;
            font-style: normal;
            font-size: 15px;
        }
        main {
            line-height: 1.6;
        }
        table {
            width: 100%;
        }
        hr {
            border: 0;
            border-top: 1px dashed;
        }
        img {
            max-width: 100%;
        }
        code {
            font-family: monospace;
            padding: 0.382rem;
            background-color: var(--code-background-color);
            color: var(--code-color);
            border-radius: .382rem;
        }
        blockquote {
            border-left: 1px solid var(--color-gray-light);
            color: var(--code-color);
            padding-left: 20px;
            font-style: italic;
        }
        footer {
            padding: .618rem;
            text-align: center;
        }

        .title:hover {
            text-decoration: none;
        }
        .title h1 {
            font-size: 1.5em;
        }
        .inline {
            width: auto !important;
        }
        .highlight,
        .code {
            padding: 1px 1rem;
            background-color: var(--code-background-color);
            color: var(--code-color);
            border-radius: .382px;
            margin-block-start: 1em;
            margin-block-end: 1em;
            overflow-x: auto;
        }

        /* blog post list */
        ul.blog-posts {
            list-style-type: none;
            padding: unset;
        }
        ul.blog-posts li {
            display: flex;
        }
        ul.blog-posts li span {
            flex: 0 0 130px;
        }
        ul.blog-posts li a:visited {
            color: var(--visited-color);
        }
        
        header {
            padding: 1.618rem 0
        }
        .tags {
            margin-top: 2rem;
            color:var(--gray-color)
        }
        .tags a {
            margin: 0 5px 0 2px
        }
        article time + a {
            margin: 0 0 0 .618rem;
        }
        table {
            border-spacing: 0;
            border-collapse: collapse;
        }
        table th,
        table td {
            border: solid 1px var(--color-gray-light);
            padding: 0.5rem;
        }
        pre code {
            display: block;
        }
        .align-left {  }
        .align-right { text-align: right; }
        .align-center { display: block; margin: auto 0; }
    </style>
</head>

